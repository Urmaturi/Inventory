<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inventory_main">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.inventory.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/add_model"
        android:name="com.example.inventory.AddNewModelFragment"
        android:label="fragment_new_oop"
        tools:layout="@layout/fragment_add_new_model" />

    <fragment
        android:id="@+id/inventory_main"
        android:name="com.example.inventory.InventoryFragment"
        android:label="fragment_new_oop"
        tools:layout="@layout/fragment_inventory" >
        <action
            android:id="@+id/action_inventory_main_to_inventoy_arhive"
            app:destination="@id/inventoy_arhive" />
        <action
            android:id="@+id/action_inventory_main_to_add_model"
            app:destination="@id/add_model" />
    </fragment>

    <fragment
        android:id="@+id/inventoy_arhive"
        android:name="com.example.inventory.InventoryArchiveFragment"
        android:label="fragment_new_oop"
        tools:layout="@layout/fragment_inventory_archive" />

</navigation>